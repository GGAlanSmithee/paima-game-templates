{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@src/*": [
        "./src/*"
      ],
      "@typechain/*": [
        "../contracts/evm/typechain-types/*"
      ],
      "@abi/*": [
        "../contracts/evm/abi/*"
      ]
    }
  },
  "include": [
    "../contracts/evm/typechain-types/**/*",
    "src/**/*",
    "tools/**/*"
  ]
}